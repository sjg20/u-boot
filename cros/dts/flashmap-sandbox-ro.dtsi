 *
 * Copyright 2018 Google LLC
 */

/ {
	binman {
		u-boot,dm-pre-reloc;
		compatible = "chromeos,flashmap";
		align-default = <4>;
		fdtmap {
		};
		read-only {
			u-boot,dm-pre-reloc;
			type = "section";
			label-prefix = "ro-";
			read-only;

			cros-ec-rw {
				filename = "ec-rw.bin";
				align-size = <0x1000>;
				hash {
					u-boot,dm-pre-reloc;
					algo = "sha256";
				};
			};

			fmap {
				align = <0x10000>;
			};

			boot-recovery {
				type = "u-boot";
			};

			gbb {
				size = <0x3000>;
				expand-size;
				align = <0x1000>;
			};
			firmware-id {
				size = <0x100>;
				type = "text";
				text-label = "frid";
			};
			locales {
				compatible = "chromeos,locales";
				type = "files";
				pattern = "locales/*";
				require-matches;
				files-compress = "lzma";
				align-default = <4>;
			};
		};

		/* ---- Section: Vital-product data (VPD) ---- */
		read-only-vpd {
			type = "section";
			label-prefix = "ro-";
			read-only;
			vpd {
				/* VPD offset must be aligned to 4K bytes */
				size = <0x0001000>;
				type = "fill";
				fill-value = [ff];
			};
		};
	};
};
